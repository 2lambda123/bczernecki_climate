  year = "2019",
  note = "R package version 0.2.0",
  url = "https://bczernecki.github.io/climate/",
  textVersion = "Czernecki, B., Głogowski A., Nowosad, J. (2019). imgw: Polish Meteorological and Hydrological Data. R package version 0.2.0. https://bczernecki.github.io/climate/"
)
